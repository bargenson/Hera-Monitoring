{
  "checks": {
    "Disk-Metrics": {
      "type": "metric",
      "command": "disk-metrics.rb",
      "interval": 30,
      "subscribers": [
        "linux"
      ],
      "handlers": ["relay"]
    },
    "Disk-Usage-Metrics": {
      "type": "metric",
      "command": "disk-usage-metrics.rb",
      "interval": 30,
      "subscribers": [
        "linux"
      ],
      "handlers": ["relay"]
    },
    "Interface-Metrics": {
      "type": "metric",
      "command": "interface-metrics.rb",
      "interval": 30,
      "subscribers": [
        "linux"
      ],
      "handlers": ["relay"]
    },
    "Load-Metrics": {
      "type": "metric",
      "command": "load-metrics.rb",
      "interval": 30,
      "subscribers": [
        "linux"
      ],
      "handlers": ["relay"]
    },
    "Memory-Metrics": {
      "type": "metric",
      "command": "memory-metrics.rb",
      "interval": 30,
      "subscribers": [
        "linux"
      ],
      "handlers": ["relay"]
    },
    "Proc-Metrics": {
      "type": "metric",
      "command": "proc-status-metrics.rb -u root",
      "interval": 30,
      "subscribers": [
        "linux"
      ],
      "handlers": ["relay"]
    },
    "Nginx-Metrics": {
      "type": "metric",
      "command": "nginx-metrics.rb -h localhost -q /nginx_status",
      "interval": 30,
      "subscribers": [
        "nginx"
      ],
      "handlers": ["relay"]
    },
    "Docker-Metrics": {
      "type": "metric",
      "command": "metrics-docker-container.rb",
      "interval": 30,
      "subscribers": [
        "docker"
      ],
      "handlers": ["relay"]
    },
    "MongoDB-Metrics": {
      "type": "metric",
      "command": "mongodb-metrics.rb",
      "interval": 30,
      "subscribers": [
        "disable"
      ],
      "handlers": ["relay"]
    },
    "HTTP-Check": {
      "type": "check",
      "command": "check-http.rb -u http://localhost/ -r -s",
      "interval": 30,
      "subscribers": [
        "nginx", "apache"
      ],
      "handlers": ["mailer", "slack"]
    },
    "Linux-Generic-Checks": {
      "type": "check",
      "command": "graphite-thresholds-check.rb -c linux",
      "interval": 30,
      "subscribers": [
        "monitoring"
      ],
      "handlers": ["mailer", "slack"]
    },
    "WW-Betyou10lbs-Checks": {
      "type": "check",
      "command": "graphite-thresholds-check.rb -c ww-betyou10lbs-front,ww-betyou10lbs-wordpress,ww-betyou10lbs-socialaggregator",
      "interval": 30,
      "subscribers": [
        "monitoring"
      ],
      "handlers": ["mailer", "slack"]
    },
    "SunLife-Rendez-vous-PME-Checks": {
      "type": "check",
      "command": "graphite-thresholds-check.rb -c sunlife-rdv-pme",
      "interval": 30,
      "subscribers": [
        "monitoring"
      ],
      "handlers": ["mailer", "slack"]
    },
    "AC-Students-Checks": {
      "type": "check",
      "command": "graphite-thresholds-check.rb -c ac-students-mongodb,ac-students-wordpress,ac-students-node,ac-students-proxy",
      "interval": 30,
      "subscribers": [
        "monitoring"
      ],
      "handlers": ["mailer", "slack"]
    }
  }
}

