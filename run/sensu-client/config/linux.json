{
    "thresholds": {
        "linux": [
            {
                "name": "Disks Usage",
                "target": "*.disk_usage.*.used_percentage",
                "warning": {
                    "greaterThan": 80
                },
                "critical": {
                    "greaterThan": 95
                }
            },
            {
                "name": "Free Memory",
                "target": "*.memory.free",
                "warning": {
                    "lowerThan": 30000000
                },
                "critical": {
                    "lowerThan": 10000000
                }
            }
        ]
    }
}
